<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59AEEF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- JAM ANALOG -->
        <AnalogClock
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"/>

        <!-- JAM DIGITAL -->
        <TextView
            android:id="@+id/txtTime"
            android:text="22.28"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- LOGO -->
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/logo"
            android:layout_marginBottom="6dp"/>

        <!-- CREDIT -->
        <TextView
            android:text="by mzky_zak"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"/>

        <!-- SEARCH BAR -->
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Cari atau ketik alamat web"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:drawableEnd="@android:drawable/ic_menu_search"/>

        <!-- GRID ICON -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:layout_marginTop="32dp"
            android:useDefaultMargins="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/facebook"
                android:onClick="openFacebook"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/youtube"
                android:onClick="openYoutube"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/instagram"
                android:onClick="openInstagram"/>

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/tiktok"
                android:onClick="openTiktok"/>

        </GridLayout>

    </LinearLayout>
</ScrollView>
